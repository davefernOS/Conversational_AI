#!/bin/bash
#
# insta485run
#
# dev server run script

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

if [ -z "$(ls -A ./var)" ]; then
	( set -x ; 
		./bin/insta485 db create
	)
fi

set -x
test -e var/insta485.sqlite3
export FLASK_DEBUG=True
export FLASK_APP=conversationAI
export CONVERSATIONAL_AI_SETTINGS=config.py
flask run --host 0.0.0.0 --port 8000

